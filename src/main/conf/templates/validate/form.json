{
  "$schema": "http://json-schema.org/schema#",
  "title": "Validate",
  "description": "The validate package is intended to make checking your date easy, maintainable and reproducible.",
  "type": "array",
  "items": [
    {
      "key": "expressions",
      "title": "Validation expression",
      "type": "array",
      "minItems": 1,
      "items": [
        {
          "key": "name",
          "type": "string"
        },
        {
          "key": "rule",
          "type": "string"
        }
      ]
    }
  ],
  "required": [
    "expressions"
  ]
}