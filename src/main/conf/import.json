{
  "$schema": "http://json-schema.org/schema#",
  "type": "array",
  "items": [
    {
      "key": "url",
      "title": "URL",
      "type": "string",
      "description": "REDCap server address."
    },
    {
      "key": "token",
      "title": "Token",
      "type": "string",
      "format": "password",
      "description": "REDCap access token."
    },
    {
      "key": "id_variable",
      "title": "Identifier Variable Name",
      "type": "string",
      "description": "REDCap variable which values are the entity identifiers."
    },
    {
      "key": "entity_type",
      "title": "Entity Type",
      "type": "string",
      "default": "Participant"
    }
  ],
  "required": [
    "url",
    "token",
    "id_variable"
  ]
}